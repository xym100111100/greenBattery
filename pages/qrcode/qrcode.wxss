.bd {
    flex: 1 1 auto;
    padding: 0;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    width: 100%;
    padding: 30rpx 0;
    text-align: center;
    background: #f1f1f1;
    font-size: 14pt;
}

.border {
    display: inline-block;
    border: dashed 8rpx #333;
    margin: 40rpx auto 20rpx auto;
    padding: 14rpx;
    text-align: center;
    border-radius: 14rpx;
}

.canvas {
    width: 200px;
    height: 200px;
}

.time {
    margin-top: 30rpx;
}

.second {
    font-family: Arial,Helvetica,sans-serif;
    font-weight: bold;
    font-size: 14pt;
}

.expires {
    color: rgb(124,32,32);
    font-size: 13pt;
}