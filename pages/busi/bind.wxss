.card {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
}

.tabs {
    flex-shrink: 0;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background: linear-gradient(to bottom,#fff,rgba(100,211,117,0.1));
}

.tab {
    width: 50%;
    padding: 10rpx 0;
    color: #666;
    font-size: 12pt;
    text-align: center;
}

.tab text {
    padding: 4rpx 0;
}

.active text {
    font-weight: bold;
    font-size: 14pt;
    color: #333;
    border-bottom: solid 6rpx rgb(35,189,112);
}

.tab-content {
    flex: 1 1 auto;
    padding-top: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
}

.mp-searchbar {
    width: 100%;
    flex-grow: 1;
    flex-shrink: 1;
    margin-bottom: 15rpx;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    box-shadow: 0 6rpx 6rpx rgba(0,0,0,0.1);
}

.weui-search-bar {
    flex-shrink: 0;
    background: #f1f1f1!important;
    margin: 10rpx;
}

.search-bar {
    font-size: 14pt;
}

.search-bar .weui-cell__hd {
    width: 0;
}

.search-bar .weui-cell__bd {
    color: #666;
}

.search-bar .active .weui-cell__bd {
    font-weight: bold;
    color: #09bb07!important;
}

.mp-searchbar .searchbar-result {
    height: 100%;
}

scroll-view {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
}

.create {
    overflow-y: scroll;
}

.create .weui-cells__group {
    background: #ededed;
    margin: 0;
    padding: 0;
}

.create .weui-cells__title {
    margin: 10rpx 0;
}

.create .weui-cell__hd {
    width: 160rpx;
}

.create .weui-cell__bd {
    padding-left: 10rpx;
}

.create .weui-input {
    padding: 0 10rpx;
}

.create .number {
    font-weight: bold;
    font-size: 14pt;
}

.create .intro {
    font-size: 10pt;
    color: #aaa;
}

.create .placeholder {
    font-weight: normal;
    font-size: 13pt;
}

.create .two-btn-bar .weui-cell__hd {
    width: 0;
}

.create .two-btn-bar .weui-cell__bd {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.create .btn_location {
    flex: 1 1 auto;
    font-weight: normal;
    flex-wrap: nowrap;
    padding: 6rpx 0!important;
}

.create .btn_location+.btn_location {
    margin-left: 20rpx;
}

.btn {
    flex: 0 0 auto;
    width: 100%!important;
}

.btn1 {
    flex: 0 0 auto;
    width: 95%!important;
    margin: 20rpx auto;
}