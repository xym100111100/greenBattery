@import "../../__wuBaseWxss__/0.wxss";

.page {
    overflow-y: scroll;
}

.weui-cell__hd {
    color: #999;
    white-space: nowrap;
    font-size: 11pt;
    padding-right: 10rpx;
}

.trash-name {
    font-size: 11pt;
    white-space: nowrap;
    overflow-x: hidden;
}

.radio-trash .radio {
    padding: 10rpx 0;
    font-size: 11pt;
}

.memo {
    font-size: 10pt;
    color: #aaa;
}

.number {
    font-family: Arial,Helvetica,sans-serif;
    font-weight: bold;
    font-size: 16pt;
    color: #333;
    text-shadow: 1rpx 1rpx #ccc;
}

.place-holder {
    font-size: 12pt;
    color: #999;
    font-weight: normal;
    text-shadow: none;
}

.radio-type .radio+.radio {
    margin-left: 40rpx;
}

.weui-input {
    padding: 0 10rpx;
}

.photo-bar {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}

.photo-border {
    box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.7);
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.photo {
    width: 120rpx;
    height: 150rpx;
    display: block;
}

mp-icon {
    padding: 20rpx;
}

.btn {
    flex: 0 0 auto;
    width: 94%!important;
    margin: 30rpx auto;
    display: flex;
    justify-content: center;
    align-items: center;
}

.iconfont {
    margin-right: 20rpx;
    font-size: 36rpx;
    font-weight: normal;
}

.mask {
    position: fixed;
    z-index: 2;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.7);
}

.big-photo {
    display: block;
    width: 100%;
    height: 100%;
}

.btn-bar {
    position: absolute;
    z-index: 3;
    left: 50rpx;
    right: 50rpx;
    bottom: 50rpx;
    height: 120rpx;
    background: transparent;
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn-box {
    text-align: center;
    color: #fff;
    padding: 20rpx 40rpx;
}

.btn-box+.btn-box {
    margin-left: 160rpx;
}

.btn1 {
    width: 80rpx;
    height: 80rpx;
}

.btn2 {
    width: 75rpx;
    height: 90rpx;
}