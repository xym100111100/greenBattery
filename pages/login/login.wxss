.wx-login {
    flex-shrink: 0;
    margin-top: 60rpx;
    padding-top: 60rpx;
    padding-right: auto;
    padding-bottom: 40rpx;
    padding-left: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 340rpx!important;
    background-color: #fff!important;
    box-shadow: 0 0 20rpx rgba(0,0,0,0.15);
    border-radius: 20rpx;
}

.wx-login image {
    width: 100px;
    height: 100px;
}

.wx-login text {
    margin-top: 20rpx;
    color: #555;
    font-size: 14pt;
    text-shadow: 1rpx 1rpx #ddd;
    white-space: nowrap;
}

.split {
    font-size: 10pt;
    margin: 40rpx auto;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #888;
}

.split:before,.split:after {
    content: '';
    display: inline-block;
    width: 100rpx;
    height: 2rpx;
    margin: 0 20rpx;
    background: #aaa;
}

.pad {
    padding: 20rpx;
    margin: 0 auto;
    background: #fff;
    width: 580rpx;
    box-shadow: 0 0 20rpx rgba(0,0,0,0.15);
    border-radius: 20rpx;
}

.row {
    display: flex;
    align-items: flex-end;
    margin-top: 40rpx;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
}

label {
    flex-shrink: 0;
    width: 160rpx;
    text-align: left;
    color: #aaa;
}

.input {
    flex: 1 1 auto;
    margin: 0 20rpx;
    padding: 0;
    border-bottom: solid 1px #eee;
}

.input-holder {
    font-weight: normal;
    font-size: 34rpx;
    font-weight: normal;
}

input {
    width: 100%;
    font-family: Arial,Helvetica,sans-serif;
    font-size: 40rpx;
    color: #00933c;
    font-weight: bold;
}

.btn-code {
    flex: 1 0 auto;
    padding: 0 20rpx!important;
    font-weight: normal;
    font-size: 14pt;
}

.btn-login {
    margin: 20rpx 0;
    width: 100%!important;
}