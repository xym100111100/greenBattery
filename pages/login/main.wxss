.bg {
    position: relative;
    width: 100%;
    height: 100%;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 15% 5% 1% 5%;
    background: transparent;
}

.logo {
    flex: 0 0 auto;
    width: 400rpx;
    height: 377rpx;
}

.text {
    flex: 1 0 auto;
    text-indent: 2em;
    text-align: justify;
    font-size: 11pt;
    margin-top: 5%;
    color: #159333;
    border-radius: 20rpx;
    padding: 0 40rpx;
}

.notice {
    text-indent: 0;
    margin-top: 5%;
    font-size: 10pt;
    text-align: center;
    color: rgb(151,49,49);
}

.btn {
    flex: 0 0 auto;
    margin: 10% auto 0 auto;
    background: rgba(255,255,255,0.5)!important;
}

.copy-right {
    flex: 1 0 auto;
}